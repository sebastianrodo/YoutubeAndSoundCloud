<div class="container"><br>
  <%= form_tag nil, method: 'get' do %>
    <%= text_field_tag  :q, "", class:"form-control mr-sm-2", placeholder:"Search" %><br>
    <center><%= submit_tag "Search", class:"btn btn-outline-success my-2 my-sm-0" %></center>
  <%end%><br>

  <center>
    <% @results.each do |result| %>
      <div class="row">
        <iframe width="100%"
                height="166"
                scrolling="no"
                frameborder="no"
                src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= result.id %>&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false">
        </iframe>
      </div><br>
    <%end%>
    <%= will_paginate @results, renderer: BootstrapPagination::Rails %>
  </center>
</div>
