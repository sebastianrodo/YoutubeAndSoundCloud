<div class="container"><br>
  <%= form_tag nil, method: 'get' do %>
    <%= text_field_tag  :q, "", class:"form-control mr-sm-2", placeholder:"Search" %><br>
    <center><%= submit_tag "Search", class:"btn btn-outline-success my-2 my-sm-0" %></center>
  <%end%>

  <% if @results %><br>

    <center><div class="row">
      <% @results.each do |result| %>
        <div class="col-3">
          <%= result[:title] %>
        </div>
        <div class="col-8">
          <iframe width="560"
                  height="315"
                  src="https://www.youtube.com/embed/<%= result[:video_id] %>"
                  frameborder="0"
                  allowfullscreen>
          </iframe>
        </div>
      <%end%>
    </div></center>
  <%end%>
    <%= will_paginate @results, renderer: BootstrapPagination::Rails %>
</div>
